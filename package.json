{
  "name": "clock-learning-game",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "An interactive web-based game to help children aged 6-8 learn to tell time",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "biome check --write src tests && jscpd --config jscpd.config.json && tsc --noEmit",
    "lint:check": "biome check src tests && jscpd --config jscpd.config.json && tsc --noEmit",
    "format": "biome format --write src tests",
    "format:check": "biome format src tests",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "babel-plugin-react-compiler": "^1.0.0",
    "canvas-confetti": "^1.9.4",
    "framer-motion": "^12.23.26",
    "howler": "^2.2.4",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/howler": "^2.2.12",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "jscpd": "^4.0.7",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
